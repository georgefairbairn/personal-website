---
import NavIcon from "../components/NavIcon.astro";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <title>George Fairbairn: {title}</title>
    <style global>
      @import "../styles/global.css";
    </style>
  </head>
  <body>
    <nav>
      <NavIcon icon="twitter" />
      <NavIcon icon="github" />
      <NavIcon icon="linkedin" />
      <NavIcon emoji="127770" />
    </nav>
    <slot />
    <p class="copyright">
      {`&copy; ${new Date().getFullYear()} George Fairbairn`}
    </p>
  </body>
</html>

<style>
  .copyright {
    text-align: center;
    font-size: 0.75rem;
    margin-top: 8rem;
  }
</style>
