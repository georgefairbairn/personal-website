---
import NavIcon from "../components/NavIcon.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import "../styles/global.css";

const { title } = Astro.props;
const { pathname } = new URL(Astro.request.url);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Frontend Engineer at Slack. Good with Javascript">
    <meta name="keyword" content="portfolio, javascript, typescript, frontend, developer, engineer">
    <meta property="og:title" content="George Fairbairn | Frontend Engineer"/>
    <meta property="og:description" content="Frontend Engineer at Slack. Good with Javascript" />
    <meta property="og:image" content="https://res.cloudinary.com/neon-flights/image/upload/f_auto/v1642973119/personal-website/profilpicsquare_qphjkn"/>
    <meta property="og:url" content="https://georgefairbairn.dev" />
    <meta property="og:type" content="website" />
    <title>George Fairbairn | {title}</title>
    <script>
      if (
        localStorage.getItem("gf-theme") === "dark" ||
        (!("gf-theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body
    class="font-sans py-8 md:py-16 max-w-7xl m-auto h-screen bg-stone-100 dark:bg-slate-900 md:px-4"
  >
    <nav class="flex justify-between items-center mb-10 md:mb-20">
      {pathname !== "/" && <NavIcon icon="back" />}
      <div class="flex flex-1 justify-around md:justify-end items-center">
        <NavIcon icon="twitter" />
        <NavIcon icon="github" />
        <NavIcon icon="linkedin" />
        <ThemeToggle />
      </div>
    </nav>
    <slot />
    <p class="text-center text-xs px-0 pt-32 pb-16 dark:text-slate-400">
      <span>&copy;</span>
      <span>{`${new Date().getFullYear()} George Fairbairn`}</span>
    </p>
  </body>
</html>
