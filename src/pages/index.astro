---
import BaseLayout from "../layouts/BaseLayout.astro";
import Profile from "../components/Profile.astro";
import PortfolioCard from "../components/PortfolioCard.astro";
import JourneySoFarCard from "../components/JourneySoFarCard.astro";
import ContactMeCard from "../components/ContactMeCard.astro";
---

<BaseLayout title="Home">
  <Profile />
  <div class="container">
    <PortfolioCard />
    <JourneySoFarCard />
    <ContactMeCard />
  </div>
</BaseLayout>

<style>
  .container {
    display: flex;
    justify-content: space-evenly;
  }
</style>
