<form class="flex flex-col bg-white dark:bg-slate-600 rounded my-24 w-6/12 p-8">
  <div class="flex flex-col items-center w-full dark:text-slate-200 mb-4">
    <div class="flex items-center justify-start w-full">
      <label for="to" class="mr-3">To:</label>
      <input
        id="to"
        name="to"
        class="w-32 font-bold bg-white dark:bg-slate-600"
        value="George Fairbairn"
        type="text"
        disabled
      />
      <img
        class="h-8 w-8 rounded-full ml-3"
        src={`${import.meta.env.PUBLIC_CLOUDINARY_URL}/profilpicsquare_qphjkn`}
        alt="profile picture"
      />
    </div>
    <hr class="h-px border-none w-full bg-slate-300 dark:bg-slate-400 mt-2" />
  </div>

  <div class="flex flex-col items-center w-full dark:text-slate-200 mb-4">
    <div class="flex items-start w-full peer">
      <label for="from" class="mr-3">From:</label>
      <input
        id="from"
        name="from"
        class="w-full font-bold outline-none placeholder:font-normal dark:bg-slate-600"
        type="email"
        placeholder="Your name or email"
        required
      />
    </div>
    <hr
      class="h-px border-none w-full bg-slate-300 dark:bg-slate-400 mt-2 peer-focus-within:bg-violet-500 peer-focus-within:h-0.75"
    />
  </div>

  <div class="flex flex-col items-center w-full dark:text-slate-200 mb-4">
    <div class="flex items-start w-full peer">
      <label for="subject" class="mr-3">Subject:</label>
      <input
        id="subject"
        name="subject"
        class="w-full font-bold outline-none placeholder:font-normal dark:bg-slate-600"
        type="text"
        placeholder="The reason for your message"
        required
      />
    </div>
    <hr
      class="h-px border-none w-full bg-slate-300 dark:bg-slate-400 mt-2 peer-focus-within:bg-violet-500 peer-focus-within:h-0.75"
    />
  </div>

  <div class="flex items-center w-full dark:text-slate-200 mb-4">
    <textarea
      id="content"
      name="content"
      class="bg-none outline-none border-b-0.75 border-white focus-within:border-violet-500 focus-visible:border-violet-500 w-full p-1 placeholder:font-normal dark:bg-slate-600"
      rows={5}
      placeholder="Your message"
      required></textarea>
  </div>

  <div class="flex justify-end mt-4">
    <button
      class="flex items-center justify-center bg-violet-500 text-white rounded font-bold py-1 px-3 border-none outline-none hover:bg-emerald-400 focus-visible:bg-emerald-400 focus-within:bg-emerald-400"
      type="button"
      ><span>Send</span><svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 512 512"
        class="h-4 w-4 fill-white ml-2"
        ><!--! Font Awesome Pro 6.1.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path
          d="M511.6 36.86l-64 415.1c-1.5 9.734-7.375 18.22-15.97 23.05c-4.844 2.719-10.27 4.097-15.68 4.097c-4.188 0-8.319-.8154-12.29-2.472l-122.6-51.1l-50.86 76.29C226.3 508.5 219.8 512 212.8 512C201.3 512 192 502.7 192 491.2v-96.18c0-7.115 2.372-14.03 6.742-19.64L416 96l-293.7 264.3L19.69 317.5C8.438 312.8 .8125 302.2 .0625 289.1s5.469-23.72 16.06-29.77l448-255.1c10.69-6.109 23.88-5.547 34 1.406S513.5 24.72 511.6 36.86z"
        ></path></svg
      ></button
    >
  </div>
</form>
